{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "lib": ["ESNext", "dom"],
    "noEmitOnError": true
  },
  "include": ["src/**/*"]
  // "exclude": [ "node_modules" ]
}
