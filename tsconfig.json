{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES6",
    "module": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "./",
    "rootDir": "./src",
    "lib": ["ESNext", "dom"],
    "noEmitOnError": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
